{
  "name": "feedma-nest-modules",
  "version": "0.0.1",
  "description": "This project contains modules for projects based on Nest Js",
  "author": "esalazarv.develop@gmail.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "postinstall": "husky install",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prebuild": "rimraf lib",
    "publish:canary": "lerna publish --canary --yes --loglevel=verbose",
    "version:stable": "lerna version --yes --conventional-commits --create-release github --loglevel=verbose",
    "publish:stable": "lerna publish --yes --conventional-commits --create-release github --loglevel=verbose",
    "publish:dev": "lerna run build && lerna run publish:dev"
  },
  "workspaces": [
    "libs/*"
  ],
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "jest-extended": "^4.0.2",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.ts": [
      "npm run lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "main": "test/app/main.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/feedma/feedma-nest-modules.git"
  },
  "keywords": [
    "nestjs",
    "modules",
    "lib",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/feedma/feedma-nest-modules/issues"
  },
  "homepage": "https://github.com/feedma/feedma-nest-modules#readme"
}
